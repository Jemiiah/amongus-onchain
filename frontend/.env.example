# ===========================================
# Among Us On-Chain - Frontend Environment
# ===========================================

# ===========================================
# Server URLs
# ===========================================

# REST API endpoint
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket endpoint for real-time game communication
NEXT_PUBLIC_WS_URL=ws://localhost:8082

# ===========================================
# Privy Configuration (Required for Wallets)
# ===========================================
# Get these from https://dashboard.privy.io

# Your Privy App ID (public, safe for frontend)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id-here

# ===========================================
# Blockchain Configuration
# ===========================================

# Monad Testnet RPC URL (default provided, can override)
NEXT_PUBLIC_RPC_URL=https://testnet-rpc.monad.xyz

# Chain ID (Monad Testnet = 10143)
NEXT_PUBLIC_CHAIN_ID=10143

# ===========================================
# Smart Contract Addresses
# ===========================================

# Factory contract address (used for on-chain game creation)
NEXT_PUBLIC_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# Misc / Optional
# ===========================================

# Skill manifest URL (defaults to production URL if not set)
NEXT_PUBLIC_SKILL_MD_URL=https://amongus-onchain.vercel.app/skill.md
